<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 欢笑旅业</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("欢笑旅业", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("产品管理", "Index", "Products")</li>
                    <li>@Html.ActionLink("套餐管理", "Index", "ComboProducts")</li>
                    <li>@Html.ActionLink("套餐项管理", "Index", "ComboProductItems")</li>
                    <li>@Html.ActionLink("员工管理", "Index", "Employee")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">报表<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("订单报表", "OrderItem", "Statement")</li>
                            <li>@Html.ActionLink("全单报表", "ExpectOrder", "Statement")</li>
                            <li>@Html.ActionLink("任务报表", "NormalTask", "Statement")</li>
                        </ul>
                    </li>
                    <li></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row" style="margin-top:30px;">
            <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked">
                    <li class="divider"><label class="text-info">产品管理</label></li>
                    <li>@Html.ActionLink("查询产品", "Index", "Products")</li>
                    <li>@Html.ActionLink("新增产品", "Create", "Products")</li>
                    <li>@Html.ActionLink("查询套餐", "Index", "ComboProducts")</li>
                    <li>@Html.ActionLink("新增套餐", "Create", "ComboProducts")</li>
                    <li class="divider"><label class="text-info">合作伙伴</label></li>
                    <li>@Html.ActionLink("查询渠道", "Index", "Partners")</li>
                    <li>@Html.ActionLink("新增渠道", "Create", "Partners")</li>
                    <li>@Html.ActionLink("查询供应商", "Index", "Suppliers")</li>
                    <li>@Html.ActionLink("新增供应商", "Create", "Suppliers")</li>
                    <li class="divider"><label class="text-info">订单管理</label></li>
                    <li>@Html.ActionLink("查询订单", "Index", "Orders")</li>
                    <li class="divider"><label class="text-info">客户管理</label></li>
                    <li>@Html.ActionLink("查询订单", "Index", "Customers")</li>
                    <li>@Html.ActionLink("编辑伙伴", "Create", "Customers")</li>
                </ul>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - 海南欢笑旅业</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
